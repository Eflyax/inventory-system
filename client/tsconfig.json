{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	],
	"files": [
		"src/shims-tsx.d.ts",
		"src/shims-vue.d.ts"
	],
}
